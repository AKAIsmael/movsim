<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE SCENARIO SYSTEM "multiModelTrafficSimulatorInput.dtd">
<!-- (c) Martin Treiber, Arne Kesting 2010 -->
<SCENARIO network_filename="test_speedlimits.xodr" output_path="sim">
    <VEHICLES>
        <VEHICLE label="IDM1" length="8" b_max="9">
            <LONGITUDINAL_MODEL>
                <IDM v0="40" T="1" s0="2" s1="0" delta="4" a="1.0" b="1.5" />
            </LONGITUDINAL_MODEL>
            <LANE_CHANGE_MODEL />
        </VEHICLE>
      <VEHICLE label="Obstacle" length="0">
            <LONGITUDINAL_MODEL>
                <IDM v0="0" T="1" s0="2" a="1.0" b="1.5"/>
            </LONGITUDINAL_MODEL>
            <LANE_CHANGE_MODEL/>
        </VEHICLE>
    </VEHICLES>
    <SIMULATION dt="0.2" duration="1800" seed="42">
        <TRAFFIC_COMPOSITION write_fund_diagrams="false">
            <VEHICLE_TYPE label="IDM1" fraction="1" />
        </TRAFFIC_COMPOSITION>
        <ROAD id="1">
            <INITIAL_CONDITIONS>
                <IC_MICRO x="10"  v="0" label="IDM1" />
                <IC_MICRO x="100" v="20" label="IDM1" />
            </INITIAL_CONDITIONS>
<!--            <TRAFFIC_SOURCE>
                <INFLOW t="0" q_per_hour="300" v="30" />
            </TRAFFIC_SOURCE>
            -->
            <SPEED_LIMITS>
                <SPEED_LIMIT x="3000" speedlimit_kmh="120" />
                <SPEED_LIMIT x="6000" speedlimit_kmh="60" />
                <SPEED_LIMIT x="8000" speedlimit_kmh="120" />
                <SPEED_LIMIT x="10000" speedlimit_kmh="200" />
            </SPEED_LIMITS>
        </ROAD>
        <OUTPUT>
            <FLOATING_CAR_DATA n_dt="2" perc_out="0" dn="0">
                <FC number="1" />
            </FLOATING_CAR_DATA>
        </OUTPUT>
    </SIMULATION>
</SCENARIO>
