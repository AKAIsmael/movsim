<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE SCENARIO SYSTEM "multiModelTrafficSimulatorInput.dtd">
<!-- (c) Arne Kesting, Ralph Germ, Martin Budden, Martin Treiber (2012) -->
<SCENARIO network_filename="ramp_metering_v2.xodr">
    <VEHICLES>
        <VEHICLE label="ACC1" length="6" b_max="40">
            <LONGITUDINAL_MODEL>
                <ACC v0="35" T="1.2" s0="3" s1="2" delta="4" a="1.2" b="2.0" coolness="1"/>
            </LONGITUDINAL_MODEL>
            <LANE_CHANGE_MODEL eur_rules="true" crit_speed_eur="20">
                <!-- b_safe < b_max to avoid crashed -->
                <MOBIL b_safe="30.0" s_min="2.0" threshold="0.05" bias_right="0.1" politeness="0."/>
            </LANE_CHANGE_MODEL>
        </VEHICLE>
        <VEHICLE label="ACC2" length="6" b_max="40">
            <LONGITUDINAL_MODEL>
                <ACC v0="35" T="1.2" s0="3" s1="2" delta="4" a="1.2" b="2.0" coolness="1"/>
            </LONGITUDINAL_MODEL>
            <LANE_CHANGE_MODEL eur_rules="true" crit_speed_eur="20">
                <!-- b_safe < b_max to avoid crashed -->
                <MOBIL b_safe="30.0" s_min="2.0" threshold="0.05" bias_right="0.1" politeness="0."/>
            </LANE_CHANGE_MODEL>
        </VEHICLE>
        <VEHICLE label="Obstacle" length="0">
            <LONGITUDINAL_MODEL>
                <IDM v0="0" T="1" s0="2" a="1.0" b="1.5"/>
            </LONGITUDINAL_MODEL>
            <LANE_CHANGE_MODEL/>
        </VEHICLE>
    </VEHICLES>
    <SIMULATION dt="0.2" duration="72000" fixed_seed="true" seed="42" crash_exit="false">
        <TRAFFIC_COMPOSITION>
            <VEHICLE_TYPE label="ACC1" fraction="1.0" relative_v0_randomization="0.0"/>
        </TRAFFIC_COMPOSITION>
        <ROAD id="1"> <!-- secondary road -->
            <TRAFFIC_COMPOSITION>
                <VEHICLE_TYPE label="ACC1" fraction="0.3" relative_v0_randomization="0.0" route_label="north"/>
                <VEHICLE_TYPE label="ACC2" fraction="0.7" relative_v0_randomization="0.0" route_label="north_then_east"/>
            </TRAFFIC_COMPOSITION>
            <INITIAL_CONDITIONS/>
            <TRAFFIC_SOURCE logging="false">
                <INFLOW t="0" q_per_hour="2000" v="24"/>
                <INFLOW t="60" q_per_hour="2000" v="24"/>
                <INFLOW t="150" q_per_hour="2000" v="24"/>
                <INFLOW t="210" q_per_hour="0" v="24"/>
           </TRAFFIC_SOURCE>
            <SPEED_LIMITS>
                <!--   <SPEED_LIMIT x="2600" speedlimit_kmh="80" /> -->
                <!--   <SPEED_LIMIT x="3600" speedlimit_kmh="200" /> -->
            </SPEED_LIMITS>
            <TRAFFIC_LIGHTS/>
            <DETECTORS/>
        </ROAD>
        <ROAD id="25"> <!-- freeway -->
            <INITIAL_CONDITIONS/>
            <TRAFFIC_SOURCE>
                <INFLOW t="0" q_per_hour="800" v="24"/>
                <INFLOW t="30" q_per_hour="1900" v="24"/>
                <INFLOW t="60" q_per_hour="2200" v="24"/>
                <INFLOW t="90" q_per_hour="1700" v="24"/>
                <INFLOW t="110" q_per_hour="2200" v="24"/>
                <INFLOW t="150" q_per_hour="2200" v="24"/>
                <INFLOW t="210" q_per_hour="0" v="24"/>
            </TRAFFIC_SOURCE>
            <SPEED_LIMITS/>
            <TRAFFIC_LIGHTS/>
            <DETECTORS/>
        </ROAD>
        <ROAD id="37">
            <INITIAL_CONDITIONS/>
            <TRAFFIC_LIGHTS>
                <!-- zero time period means that light will not change automatically from that color -->
                <!-- negative time period means that light will not use that color -->
                <TRAFFIC_LIGHT x="300" green_time="0" green_red_time="-1" red_time="0" red_green_time="-1" phase_shift="0"/>
            </TRAFFIC_LIGHTS>
        </ROAD>
        <ROUTES>
            <ROUTE label="north">
                <ROAD id="1" />
                <ROAD id="2" />
                <ROAD id="3" />
            </ROUTE>
            <ROUTE label="north_then_east">
                <ROAD id="1" />
                <ROAD id="2" />
                <ROAD id="37" />
                <ROAD id="26" />
                <ROAD id="27" />
            </ROUTE>
        </ROUTES>
        <OUTPUT/>
    </SIMULATION>
</SCENARIO>
