<SCENARIO>

<DRIVER_VEHICLE_UNITS>

  <VEHICLE label="IDM1" length="6" b_max="9"> 
    <LONGITUDINAL_MODEL>
       <IDM v0="33.33" T="1" s0="2" s1="0" delta="4" a="1.0" b="1.5" />
    </LONGITUDINAL_MODEL>
    <LANE_CHANGING_MODEL/>
  </VEHICLE>
</DRIVER_VEHICLE_UNITS>



<OUTPUT>
  <MACRO dx="100" dt="40"/>
  <DETECTORS dt="60"> 
    <CROSS_SECTION x="1000"/>
    <CROSS_SECTION x="6000"/>
    <CROSS_SECTION x="8000"/>
    <CROSS_SECTION x="9000"/>
    <CROSS_SECTION x="10000"/>
	<CROSS_SECTION x="11000"/>
    <CROSS_SECTION x="12000"/>
	<CROSS_SECTION x="13000"/>
    <CROSS_SECTION x="14000"/>
	<CROSS_SECTION x="15000"/>
	<CROSS_SECTION x="16000"/>
  </DETECTORS>
</OUTPUT>

<SIMULATION dt="0.4" x_max="20000" t_max="7200" lanes="1" with_fixed_seed="true" seed="42">

  <HETEROGENEITY write_fund_diagrams="true" >
    <VEHICLE_TYPE label="IDM1" fraction="1"  />
  </HETEROGENEITY>
  
  <INITIAL_CONDITIONS>
    <IC_MACRO x="8600" rho_invkm="2" v="30"/> 
  </INITIAL_CONDITIONS>

  <!-- auch noch qCap notwendig ?? -->
  <UPSTREAM_BOUNDARY_CONDITIONS with_logging="true" >
    <INFLOW t="0"     q_invh="200"   v="30" /> 
    <INFLOW t="1500"  q_invh="2200"  v="22" />
    <INFLOW t="10800" q_invh="1000"  v="30" /> 
  </UPSTREAM_BOUNDARY_CONDITIONS>

  <!-- improve veh performance at inflow -->
  <FLOW_CONSERVING_INHOMOGENEITIES>
   <INHOMOGENEITY x="0"     alpha_T="0.8"  /> 
   <INHOMOGENEITY x="2000" alpha_T="1"   />
  </FLOW_CONSERVING_INHOMOGENEITIES>
  

  <SPEED_LIMITS>
  </SPEED_LIMITS>

  <RAMPS>
    <RAMP x_center="15000" length="1000" with_logging="true" >
       <INFLOW t="0" q_invh="550" />
    </RAMP>
  </RAMPS>

  <TRAFFICLIGHTS>
  </TRAFFICLIGHTS>

</SIMULATION>

</SCENARIO>

