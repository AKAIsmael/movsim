<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE SCENARIO SYSTEM "sim/multiModelTrafficSimulatorInput.dtd">
<!-- (c) Martin Treiber, Arne Kesting 2011 -->
<SCENARIO path=".">
    <VEHICLES>
        <VEHICLE label="ACC1" length="6" b_max="9">
            <LONGITUDINAL_MODEL>
                <ACC v0="35" T="1.2" s0="2" s1="0" delta="4" a="1.2" b="2.0"
                    coolness="1" />
            </LONGITUDINAL_MODEL>
            <LANE_CHANGE_MODEL eur_rules="true" crit_speed_eur="20">
                <MOBIL b_safe="4.0" s_min="2.0" threshold="0.2"
                    bias_right="0.1" politeness="0.1" />
            </LANE_CHANGE_MODEL>

        </VEHICLE>

        <!-- trucks -->
        <VEHICLE label="ACC2" length="16" b_max="9">
            <LONGITUDINAL_MODEL>
                <ACC v0="25" T="1.5" s0="4" s1="2" delta="4" a="0.8" b="1.5"
                    coolness="1" />
            </LONGITUDINAL_MODEL>
            <LANE_CHANGE_MODEL eur_rules="true" crit_speed_eur="20">
                <MOBIL b_safe="4.0" s_min="2.0" threshold="0.2"
                    bias_right="0.3" politeness="0.2" />
            </LANE_CHANGE_MODEL>

        </VEHICLE>

       

        <VEHICLE label="Obstacle" length="0">
            <LONGITUDINAL_MODEL>
                <IDM v0="0" T="1" s0="2" a="1.0" b="1.5" />
            </LONGITUDINAL_MODEL>
            <LANE_CHANGE_MODEL />
        </VEHICLE>
    </VEHICLES>
    <SIMULATION dt="0.2" duration="10000" fixed_seed="true" seed="42"
        crash_exit="true">
	<TRAFFIC_COMPOSITION write_fund_diagrams="false">
                <!-- <VEHICLE_TYPE label="IDM1" fraction="0" /> -->
                <VEHICLE_TYPE label="ACC1" fraction="0.8"
                    relative_v0_randomization="0.2" />
                <VEHICLE_TYPE label="ACC2" fraction="0.2"
                    relative_v0_randomization="0.2" />
        </TRAFFIC_COMPOSITION>
        <ROAD id="0" length="5000" lanes="2">
            <INITIAL_CONDITIONS>
                <IC_MACRO x="600" rho_per_km="2" v="30" />
            </INITIAL_CONDITIONS>
            <TRAFFIC_SOURCE logging="false">
                <INFLOW t="0" q_per_hour="22000" v="30" />
            </TRAFFIC_SOURCE>
            <TRAFFIC_SINK />
            <!-- improve vehicle performance at inflow -->
            <FLOW_CONSERVING_INHOMOGENEITIES>
                <INHOMOGENEITY x="0" alpha_T="0.7" />
                <INHOMOGENEITY x="1000" alpha_T="1" />
            </FLOW_CONSERVING_INHOMOGENEITIES>
            <SPEED_LIMITS>
              <!--   <SPEED_LIMIT x="2600" speedlimit_kmh="80" /> -->
              <!--   <SPEED_LIMIT x="3600" speedlimit_kmh="200" /> -->
            </SPEED_LIMITS>
          <RAMPS>
                <RAMP id="-1" x="1800" length="900" merge_length="400"
                    logging="false">
                    <TRAFFIC_SOURCE id="0" />
                    <TRAFFIC_SINK id="1" />
                </RAMP>
        	<RAMP id="2" x="3000" length="600" merge_length="400"
                    logging="false">
                    <TRAFFIC_SOURCE logging="false"> 
  		  <INFLOW t="0" q_per_hour="550" /> 
                   </TRAFFIC_SOURCE>    
                  <TRAFFIC_SINK id="0" />            
                  </RAMP>
               <RAMP id="1" x="4000" length="600" merge_length="400"
                    logging="false">
                    <TRAFFIC_SOURCE id="-1" />
                    <TRAFFIC_SINK id="0" />
                </RAMP>

               <!-- <RAMP id="1" x="3000" length="600" merge_length="400"
                    logging="false">
                    <TRAFFIC_SOURCE logging="false"> -->
                       <!-- <INFLOW t="0" q_per_hour="550" /> -->
                   <!-- </TRAFFIC_SOURCE>                </RAMP>-->

            </RAMPS>
            <TRAFFIC_LIGHTS>
            </TRAFFIC_LIGHTS>
            <DETECTORS />
        </ROAD>
        <OUTPUT>
            <!-- <SPATIOTEMPORAL dx="100" dt="40" /> -->
            <!-- <TRAJECTORIES dt="1" start_time="0" end_time="420" start_x="2000" 
                end_x="5000" /> -->
        </OUTPUT>
    </SIMULATION>
</SCENARIO>
