<SCENARIO path=".">
    <VEHICLES>
        <VEHICLE label="IDM1" length="6" b_max="9">
            <LONGITUDINAL_MODEL>
                <IDM v0="33.33" T="1" s0="2" s1="0" delta="4" a="1.0" b="1.5" />
            </LONGITUDINAL_MODEL>
            <LANE_CHANGE_MODEL />
        </VEHICLE>
    </VEHICLES>
    <SIMULATION dt="1" duration="7200" fixed_seed="true" seed="42">
        <ROAD id="1" length="2000" lanes="2">
            <TRAFFIC_COMPOSITION write_fund_diagrams="false">
                <VEHICLE_TYPE label="IDM1" fraction="1" />
            </TRAFFIC_COMPOSITION>
            <INITIAL_CONDITIONS>
                <IC_MACRO x="600" rho_per_km="2" v="30" />
            </INITIAL_CONDITIONS>
            <TRAFFIC_SOURCE logging="true">
                <INFLOW t="0" q_per_hour="200" v="30" />
                <INFLOW t="1500" q_per_hour="2200" v="22" />
                <INFLOW t="10800" q_per_hour="1000" v="30" />
            </TRAFFIC_SOURCE>
            <TRAFFIC_SINK />
            <!-- improve vehicle performance at inflow -->
            <FLOW_CONSERVING_INHOMOGENEITIES>
                <INHOMOGENEITY x="0" alpha_T="0.8" />
                <INHOMOGENEITY x="800" alpha_T="1" />
            </FLOW_CONSERVING_INHOMOGENEITIES>
            <SPEED_LIMITS>
            </SPEED_LIMITS>
            <RAMPS>
                <!-- <SIMPLE_RAMP x="1400" length="200" logging="false">
                    <INFLOW t="0" q_per_hour="550" />
                </SIMPLE_RAMP> -->
                <RAMP x="1400" length="200" x_max="1000" logging="true">
	          <TRAFFIC_SOURCE logging="true">
                     <INFLOW t="0" q_per_hour="500" />
                  </TRAFFIC_SOURCE>
                </RAMP>
            </RAMPS>
            <TRAFFIC_LIGHTS>
            </TRAFFIC_LIGHTS>
            <DETECTORS />
        </ROAD>
        <OUTPUT>
            <SPATIOTEMPORAL dx="100" dt="40" />
            <!-- <TRAJECTORIES dt="1" start_time="0" end_time="420" start_x="2000" 
                end_x="5000" /> -->
        </OUTPUT>
    </SIMULATION>
</SCENARIO>
